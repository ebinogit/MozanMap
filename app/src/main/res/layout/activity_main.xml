<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_view"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#330d10"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />


    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.mozanmap.CustomImageView
            android:id="@+id/customImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map2"
            />
    </FrameLayout>

<!--ボトムシート-->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="140dp"
        android:background="#A4696D"
        android:paddingTop="5dp"
        >
<!--横棒-->
        <View
            android:id="@+id/staticHorizontalBar"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background" />
        <LinearLayout
            android:id="@+id/view_block1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/button_block1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/button_class"
                    android:background="@drawable/circle_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/class_img"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_name1"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>
            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/button_block2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/button_food"
                    android:background="@drawable/circle_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/food_img"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_name2"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>
            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/button_block3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/button_others"
                    android:background="@drawable/circle_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/others_img"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_name3"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>
            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_button_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:layout_marginTop="25dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
<!--        Foodエリア-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_button_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            app:layoutManager="GridLayoutManager"
            app:spanCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
<!--        <LinearLayout-->
<!--            android:id="@+id/food_button_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical"-->
<!--            android:background="#C3F9FFFF"-->
<!--            android:layout_marginTop="25dp"-->
<!--            >-->

<!--            <androidx.gridlayout.widget.GridLayout-->
<!--                android:id="@+id/food_button_grid"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:columnCount="2"-->
<!--                app:orientation="horizontal"-->
<!--                android:padding="16dp"-->
<!--                >-->
<!--            </androidx.gridlayout.widget.GridLayout>-->
<!--        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/others_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00AD03"
            android:layout_marginTop="30dp"
            >

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/others_button_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="bottom|center_horizontal"
                >
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
